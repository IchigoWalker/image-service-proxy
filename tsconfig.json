{
  "compilerOptions": {
    "lib": [
      "esnext",
      "DOM"
    ],
    "outDir": "dist",
    "module": "ESNext",
    "incremental": false,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "esnext",
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "strict": false,
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": [
    ".",
  ]
}